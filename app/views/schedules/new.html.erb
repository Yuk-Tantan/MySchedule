<div class="information">
    <h2>スケジュール新規作成</h2>
</div>

<table>
    <%= form_with(model: @schedule, loca: true) do |f| %>
    <tbody>
        <tr>
            <th><%= f.label :title, 'タイトル' %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date, '開始日' %></th>
            <td><%= f.date_field :start_date %></td><!--https://qiita.com/___xxx_/items/ad5ce5d2a0090d8c6b6c 参考-->
        </tr>
        <tr>
            <th><%= f.label :end_date, '終了日' %></th>
            <td><%= f.date_field :end_date %></td><!--https://qiita.com/___xxx_/items/ad5ce5d2a0090d8c6b6c 参考-->
        </tr>
        <tr>
            <th><%= f.label :end_date, '終日' %></th>
            <td><%= f.check_box :all_day, true, false %></td><!--https://www.y-hakopro.com/entry/2020/01/22/%E3%80%90_f.check_box%E3%80%91%E3%83%81%E3%82%A7%E3%83%83%E3%82%AF%E3%83%9C%E3%83%83%E3%82%AF%E3%82%B9%E3%82%92%E3%83%87%E3%83%95%E3%82%A9%E3%83%AB%E3%83%88%E3%81%A7%E3%83%81%E3%82%A7%E3%83%83%E3%82%AF を参考-->
        </tr>
        <tr>
            <th><%= f.label :note, 'メモ' %></th>
            <td><%= f.text_field :note %></td>
        </tr>
    </tbody>
        <%= f.submit 'スケジュールを新規投稿する' %>
    <% end %>
</table>